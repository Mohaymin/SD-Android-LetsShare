<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/srlbg"
        android:layout_width="267dp"
        android:layout_height="266dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/preview" />

    <LinearLayout
        android:id="@+id/TextLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/srlbg"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montez"
            android:text="@string/firstline"
            android:textAlignment="center"
            android:textColor="@color/forbutton"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:text="@string/secondline"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/forbutton"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/TextLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/sendB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_send"
                android:text="Send"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/receiveB"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_receive"
                android:text="Receive"
                android:textColor="@color/forbutton"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>